
@{
    ViewBag.Title = "v_conversation";
    Layout = "~/Views/Shared/private_view.cshtml";
}

<h2>video chat</h2>
<style>
    #friend_video_container {
        height:400px;
        width:500px;
    };
    #me_video_container { align-self:auto;
    }
</style>
<div id="video_streaming">
    <div id="friend_video_container" class="vid_container">
        <span id="participant_name"></span>
        <video autoplay id="remoteVideo"></video>
    </div>

    <div id="me_video_container" class="vid_container">
        <span>Me</span>
        <video autoplay height="200" width="200" id="localVideo"></video>
    </div>
    <audio autoplay id="remoteAudio" />
</div>
<div id="call_close" onclick="closeCallImmediately()" style="cursor:pointer">
    <p>
        <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1555664002/close_call.png" height="30" width="30" />
    </p>
</div>
<script src="~/Scripts/vConferens.js"></script>