@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Logo.cshtml";
}
@using Slug.Extensions

<h2>@Html.Translate("Login")</h2>
<div id="await_confirmation" style="display: @ViewBag.await_confirmation_div_display">
    <p>@Html.Translate("Activate_Atention")</p>
</div>

<div id="logining" style="display: @ViewBag.immediately_login_div_display">
    <p>@Html.Translate("Pre_Login_msg")  <a href="/guest/register">@Html.Translate("Here")</a></p>
    <div>
        @using (Html.BeginForm("auth", "guest", null, FormMethod.Post, new { @id = "_subm" }))
        {
            <p><input type="text" placeholder="@Html.Translate("Your_Login")" name="login" required /></p>
            <p><input type="password" placeholder="@Html.Translate("Your_Password")" name="hashPassword" id="psw" required /></p>
            <p><input type="submit" value="@Html.Translate("Button_Login")" /></p>
        }
    </div>
</div>

<script src="~/Scripts/System/sha512.js"></script>
<script src="~/Scripts/System/jquery-1.6.4.js"></script>
<script src="~/Scripts/System/jquery-1.6.4.min.js"></script>
<script src="~/Scripts/System/SHA-512.js"></script>
<script>
    document.getElementById("_subm").addEventListener("submit", function (e) {
        var hash = getSHA(document.getElementById("psw").value);
        document.getElementById("psw").value = hash;
    });
</script>