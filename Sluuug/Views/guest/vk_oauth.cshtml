@{
    @model Slug.Model.VkModels.AwaitViewModel
}

<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="/Resources/images/favicon.ico" type="image/x-icon">
    <link href="~/Styles/guest/vk-oauth-style.css" rel="stylesheet" />
    <link href="~/Styles/common/await.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Авторизация через вконтакте</title>
</head>
<body>
    <div class="await-form">
        <div class="user-form">
            <div class="title-form">
                <div class="vk-ico-container">
                    <img src="/Resources/images/vk_ico.png" />
                </div>
                <h1>Авторизация через вконтакте</h1>
            </div>
            <div class="avatar-form">
                <div class="img-container">
                    <img class="avatar-img" src="@Model.Avatar" />
                </div>
            </div>
            <div class="name-surname-form">
                <span>@Model.Name</span>
                <span>@Model.SurName</span>
            </div>
        </div>
        <div class="message-form">
            <span>Идет авторизация, пожалуйста подождите...</span>
        </div>
        <div class="await-anim">
            <div id="circular3dG" hidden="" style="display: block;">
                <div id="circular3d_1G" class="circular3dG"></div>
                <div id="circular3d_2G" class="circular3dG"></div>
                <div id="circular3d_3G" class="circular3dG"></div>
                <div id="circular3d_4G" class="circular3dG"></div>
                <div id="circular3d_5G" class="circular3dG"></div>
                <div id="circular3d_6G" class="circular3dG"></div>
                <div id="circular3d_7G" class="circular3dG"></div>
                <div id="circular3d_8G" class="circular3dG"></div>
            </div>
        </div>
        <div class="error-message-form">
            <span id="error"></span>
        </div>
    </div>
</body>
</html>
