@using Slug.Extensions;

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta content="text/html; charset=UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description">
    <meta property="og:description" content="@ViewBag.Description">
    <link rel="icon" href="~/Resources/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/Styles/private/private_style.css">
    <link rel="stylesheet" href="~/Styles/private/controlls_style.css">
    <link href="~/Styles/common/alert-message-style.css" rel="stylesheet" />
    <link href="~/Styles/common/await.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="~/Scripts/Private/Common/LeftNavMenuDisable.js"></script>
    <script src="~/Scripts/System/Alert.js"></script>
    <script src="~/Scripts/Private/Settings/LocalSettings.js"></script>
    <script src="~/Scripts/System/AsyncRequest.js"></script>
    <script src="~/Scripts/System/BigInteger.js"></script>
    <script src="~/Scripts/System/jquery.signalR-2.4.0.js"></script>
    <script src="~/Scripts/System/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/Scripts/Private/Search/Search.js"></script>
    <script src="~/Scripts/Private/Common/News.js"></script>
    <script src="~/Scripts/Private/Common/RelocationToUser.js"></script>
    <script src="~/Scripts/Private/Common/MainGlobalHub.js"></script>
    <script src="~/Scripts/Private/Profile/Vips.js"></script>
    <script src="~/Scripts/Private/Common/DynamicHtmlNodes/DynamicNodes.js"></script>
</head>
<body>
    <div class="alert hide">
        <div class="container">
            <span class="alert-text">❌Размер загружаемых файлов превышает 100 Мб</span>
            <button class="close-alert-button" onclick="CloseAlert()">Ok</button>
        </div>
    </div>
    <nav role="navigation">
        <ul id="menu">
            <li id="menu-toggle" onclick="moveMenu()">
                <div id="menuToggle">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </li>
            </div>
            <li class="quick-search">
                <div id="search-form">
                    <span>Найти</span>
                    <form id="searchSubmit">
                        <select name="user_sex">
                            <option value="0">Женщину</option>
                            <option value="1">Мужчину</option>
                            <option value="-1">Не важно</option>
                        </select>
                        <select id="countryListBoxId" name="user_country" onchange="getCities('countryListBoxId','citiesListBoxId', true)">
                            <option value="7">Россия</option>
                            <option value="380">Украина</option>
                            <option value="375">Белорусь</option>
                            <option value="-1">Не важно</option>
                        </select>
                        <select id="citiesListBoxId" name="user_city">
                            <option value="495">Москва</option>
                            <option value="-1">Не важно</option>
                        </select>
                        <select name="user_age">
                            <option value="-1">Не важно</option>
                            <option value="0">16-20</option>
                            <option value="1">21-26</option>
                            <option value="2">27-32</option>
                            <option value="3">33-40</option>
                            <option value="4">41-49</option>
                            <option value="5">50-59</option>
                            <option value="6">60-69</option>
                            <option value="7">более 70</option>
                        </select>
                        <input placeholder="Имя или фамилия" type="text" id="user-search-name" name="user_name">
                    </form>
                    <button onclick="serchUser('searchSubmit')">Поиск</button>
                </div>
            </li>
        </ul>

        </div>
    </nav>

    <div class="incomming-notify"></div>
    <div class="body-container">
        <div id="left-navigation">
            <ul id="ul-left-navigation">
                <a href="/private/my">
                    <li>
                        <img alt="profile" height="30" width="30" src="~/Resources/images/home_ico.png" />
                        <span class="nav-entry">Мой профиль</span>
                    </li>
                </a>

                <a href="/private/cnv">
                    <li>
                        <img alt="messages" height="30" width="30" src="~/Resources/images/mess_ico.png" />
                        <span class="nav-entry">Сообщения</span>
                        <div class="notify-container-increment-message"></div>
                    </li>
                </a>

                <a href="/private/crypto_cnv">
                    <li>
                        <img alt="encripted messages" height="30" width="30" src="~/Resources/images/lock_ico.png" />
                        <span class="nav-entry">Секретный чат</span>
                        <div class="notify-container-increment-crypto"></div>
                    </li>
                </a>
                <a href="/private/invite_video_conversation">
                    <li>
                        <img alt="video dialog" height="30" width="30" src="~/Resources/images/video_connect_ico.png" />
                        <span class="nav-entry">Видео-связь</span>
                        <div class="notify-container-increment-video"></div>
                    </li>
                </a>

                <a href="/private/search">
                    <li>
                        <img alt="search" height="30" width="30" src="~/Resources/images/search_ico.png" />
                        <span class="nav-entry">Поиск</span>
                    </li>
                </a>

                <a href="/private/contacts">
                    <li>
                        <img alt="contacts" height="30" width="30" src="~/Resources/images/contacts_ico.png" />
                        <span class="nav-entry">Контакты</span>
                        <div class="notify-container-increment-contact"></div>
                    </li>
                </a>

                <a href="/private/settings">
                    <li>
                        <img alt="settings" height="30" width="30" src="~/Resources/images/settings_ico.png" />
                        <span class="nav-entry">Настройки</span>
                    </li>
                </a>

                <a href="/private/support">
                    <li>
                        <img alt="support" height="30" width="30" src="~/Resources/images/support_ico.png" />
                        <span class="nav-entry">Техподдержка</span>
                    </li>
                </a>

                <a href="/private/logout">
                    <li>
                        <img alt="logout" height="30" width="30" src="~/Resources/images/logout-ico.png" />
                        <span class="nav-entry">Запасной выход</span>
                    </li>
                </a>
            </ul>
        </div>
        <div class="private-content">@RenderBody()</div>
        <div class="vip-users-container">
            <div class="vip-users-table">
                <div class="vip-title">
                    <span id="vip-title-text">Топ Пользователи</span>
                </div>
                <div class="vip-list stylized-scrollbar">
                    <div class="await-vip-upload">
                        <div id="circular3dG" hidden="" style="display: block;">
                            <div id="circular3d_1G" class="circular3dG"></div>
                            <div id="circular3d_2G" class="circular3dG"></div>
                            <div id="circular3d_3G" class="circular3dG"></div>
                            <div id="circular3d_4G" class="circular3dG"></div>
                            <div id="circular3d_5G" class="circular3dG"></div>
                            <div id="circular3d_6G" class="circular3dG"></div>
                            <div id="circular3d_7G" class="circular3dG"></div>
                            <div id="circular3d_8G" class="circular3dG"></div>
                        </div>
                    </div>
                </div>
                <div class="null-vips-msg"></div>

                <div class="new-vip-container">
                    <div class="new-vip-help-container">
                        <span class="why-need-vip-tooltip" vip-tooltip="Ваш профиль будет отображатся для всех пользователей вашего города, которые готовы познакомится.">Попасть в топ ?</span>
                    </div>
                    <div class="new-vip-join-container">
                        <button class="new-vip-activate-button">
                            <div class="vip-button-top">
                                <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578060895/system/l_cron.png" />
                                <span>Активировать VIP</span>
                                <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578060895/system/l_cron.png" />
                            </div>
                            <div class="vip-button-bottom">
                                <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578061376/system/line_cron.png" />
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        window.onloadend = getNotSeenNotify(), uploadVIP();
        getCities('countryListBoxId', 'citiesListBoxId', true);
    </script>
</body>
</html>