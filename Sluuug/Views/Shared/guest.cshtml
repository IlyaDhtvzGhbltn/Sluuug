@using Slug.Extensions;
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta content="text/html; charset=UTF-8">
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="Социальная сеть, Знакомства, Видеосвязь, Шифрование сообщений">
    <meta name="robots" content="index, follow">
    <meta property="og:description" content="@ViewBag.Description">
    <meta property="og:locale" content="ru_RU" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="FRIENDLYNET" />
    <meta property="og:type" content="article" />
    <meta property="og:image" content="http://we.somee.com/Resources/images/brand.png" />
    <meta property="og:url" content="@Context.Request.Url.Host@Context.Request.Path" />
    <meta http-equiv="content-language" content="ru">
    <meta http-equiv="cache-control" content="no-cache">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link rel="icon" href="~/Resources/images/favicon.png" type="image/x-icon">
    <link href="~/Styles/guest/index_form.css" rel="stylesheet" />
    <link href="~/Styles/guest/index_style.css" rel="stylesheet" />
    <link href="~/Styles/common/await.css" rel="stylesheet" />

    <script src="~/Scripts/Guest/index_form.js"></script>
    <script src="~/Scripts/System/AsyncRequest.js"></script>
    <script src="~/Scripts/Guest/validationGuest.js"></script>
    <script src="~/Scripts/System/ParseFormArray.js"></script>
    <script src="~/Scripts/System/sha512.js"></script>
    <script src="~/Scripts/System/SHA-512.js"></script>
    <script src="~/Scripts/System/Validation.js"></script>
</head>
    <body>

        @if (ViewBag.IsIndex)
        {
            <div class="head_navigation" id="head_navigation" hidden>
                <div class="head-main-logo">
                    <div class="head-main-logo-container" onclick="scrolling('overlay')">
                        <img src="~/Resources/images/brand.png" height="50" alt="brand ico" />
                    </div>
                </div>
                <div class="head_fix_menu" id="overlay">
                    <button class="header-button" onclick="scrolling('functions', 70)">Возможности</button>
                    <button class="header-button" onclick="scrolling('help', 70)">Справка</button>
                    <button class="header-button" onclick="show_feedback_form()">Обратная связь</button>
                    <button class="header-button" onclick="scrolling('overlay'), show_register()">Зарегистрироваться</button>
                </div>
                <div class="head-login">
                    <button class="header-button" onclick="scrolling('overlay'), show_login()">Войти</button>
                </div>
            </div>
            <div class="right_navigation" id="right_navigation" hidden>
                <nav>
                    <ul>
                        <li>
                            <a href="#overlay">
                                <div id="help_nav"></div>
                                <svg class="circle_nav">
                                    <circle id="main_circle" cx="12" cy="12" r="5"></circle>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="#main">
                                <svg class="circle_nav">
                                    <circle id="function_circle" cx="12" cy="12" r="5"></circle>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="#functions">
                                <svg class="circle_nav">
                                    <circle id="reg_log_circle" cx="12" cy="12" r="5"></circle>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a href="#help">
                                <svg class="circle_nav">
                                    <circle id="help_circle" cx="12" cy="12" r="5"></circle>
                                </svg>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
        <div class="feed_back"></div>
        <div class="fullscreen-bg" itemscope itemtype="http://schema.org/Article">
            @*<div class="navigation">
                @if (ViewBag.IsIndex)
                {
                    @RenderPage("~/Views/Shared/public_index_navigation.cshtml")
                }
                else
                {
                    @RenderPage("~/Views/Shared/public_other_navigation.cshtml")
                }
            </div>*@
            <video loop muted autoplay poster="/Resources/images/night_city_background.png" class="fullscreen-bg__video">
                <source src="/Resources/video/final.mp4" type="video/mp4">
            </video>
        </div>

        @{
            @RenderBody();
        }

        <div class="footer">
            <div class="gradient_footer">
                <div class="footer-nav-container">
                    @if (ViewBag.IsIndex)
                    {
                        @RenderPage("~/Views/Shared/public_index_navigation.cshtml")
                    }
                    else
                    {
                        @RenderPage("~/Views/Shared/public_other_navigation.cshtml")
                    }
                </div>
                <div class="about">
                    <div class="footer-about-container">
                        <p>FRIENDLYNET - социальная сеть, созданная для того, что бы ваша связь с друзьями и близкими никогда не прерывалась.</p>
                    </div>
                    <div class="footer-copirate-container">
                        <p>Copyright © 2019, FRIENDLYNET, All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>