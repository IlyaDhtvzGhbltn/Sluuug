@model Slug.Model.Users.BaseUser
@using Slug.Extensions

@{
    var activeCircleClass = new Dictionary<bool, string>()
    {
        { true, "on-wire-circle"},
        { false, "off-wire-circle"}
    };
}


<div class="contact-wrapper">
    <div class="entry-container">
        <div class="head">
            <img class="user-contacts-avatar" alt="user avatar" src="@Model.LargeAvatar" />
            @if (Model.Vip)
            {
                <img class="vipuser-crown" src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578220125/system/86f6452c09d91a8a507417a473d956d1.png" />
            }
        </div>
        <div class="body">
            <div onclick="redirectToUser(@Model.UserId)">
                <h2>@Model.Name @Model.SurName</h2>
            </div>
            <div class="info">
                <div class="wire-status-circle @activeCircleClass[Model.IsOnline]"></div>
                <span>@Model.Age лет @Model.Country @Model.City</span>
            </div>
            <span>@Model.HelloMessage</span>
        </div>
        <div class="manage"></div>
    </div>
</div>
