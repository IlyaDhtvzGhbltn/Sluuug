@using Slug.Extensions

<form action="" id="new_album">
    <p>
    <span>@Html.Translate("Text_New_Album_Title") </span>
    <input type="text" name="Title" required />
    <span id="album_field_requered" style="color:red; display:none"> * Requered Field </span>
    </p>
    <p>
    <span>@Html.Translate("Text_New_Album_Description") </span>
    <input type="text" name="AuthorComment" id="album_comment">
    </p>
    <p>
    <span>@Html.Translate("Text_New_Album_Label") </span>
    <input type="file" id="album_label" accept=".jpg, .bmp, .png">
    </p>
</form>
<button id="close_album_form" onclick="close_form('create_album_form', 'create_new_album_button', 'inline-block')">@Html.Translate("Button_Cancel")</button>
<button onclick="send( '/api/create_album' ,'new_album', 'create_new_album_button', 'album_field_requered')">@Html.Translate("Button_Create")</button>