@{
    var refLink = string.Empty;
    if (Request.IsSecureConnection)
    { refLink = "https://"; }
    else
    { refLink = "http://"; }
    refLink += Request.Url.Host + ":" + Request.Url.Port;
    refLink += "/guest/index?ref=" + ViewBag.Referal;
}
<link href="~/Styles/private/payment-style.css" rel="stylesheet" />
<div class="payment-root">
    <div class="close-payment" onclick="document.getElementsByClassName('payment-root')[0].style='display:none'; CloseAlert();">
        <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578746239/system/pay-close.svg" />
    </div>
    <div class="payment-types">
        @*<input type="radio" name="payment" class="payment-checkbox" id="yandex-checkbox" />*@
        <div class="payment-header" id="yandex">
            @*<div class="header-img-container">
                <img src="https://money.yandex.ru/b/_/RIYq0jG3DUBkyrBFcZgmTj-dqZI.svg" />
            </div>
            <div class="header-title-container">
                <span class="pay-title">Яндекс.Деньги</span>
            </div>*@
        </div>

        <input type="radio" name="payment" class="payment-checkbox" id="free-checkbox" checked />
        <div class="payment-header" id="free">
            <div class="header-img-container">
                <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578744626/system/platezi.svg" />
            </div>

            <div class="header-title-container" id="free-pay-title-container">
                <span class="pay-title">Бесплатно</span>
            </div>
        </div>

        <div class="payment-form" id="yandex-pay-form">
            <div class="form-header-container">
                <span class="form-header-title">В настоящее время оплата через Yandex.Money недоступна</span>
            </div>
        </div>
        
        <div class="payment-form" id="free-pay-form">
            <div class="form-header-container">
                <span class="form-header-title">Пригласите друзей и получите VIP бесплатно</span>
            </div>
            <div class="description-container">
                <span class="description">
                    Делитесь ссылкой на наше приложение в соцсетях и с друзьями что бы получить VIP совершенно бесплатно.
                    Чем больше больше новых пользователей вы приведете, тем дольше будет действовать ваш статус.
                </span>
            </div>
            <div class="referal-div-container">
                <div class="referal-container">
                    <div class="you-url-title">
                        <span>Ваша ссылка :</span>
                    </div>
                    <div class="referal-url-container">
                        <input style="font-size:14px" type="text" value="@refLink" disabled id="referal" />
                    </div>
                    <div class="copy-img-container" title="Копировать ссылку" onclick="navigator.clipboard.writeText(document.getElementById('referal').value);document.getElementById('url-copied-text').innerHTML = 'Ссылка скопированна'; ">
                        <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1578751517/system/copy-img.svg" />
                    </div>
                </div>
                <div class="url-copied-container"><span id="url-copied-text"></span></div>
            </div>

            <div class="vip-types-container">
                <table>
                    <tbody>
                        <tr>
                            <th>
                                <div class="table-header">
                                    <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1579033536/system/time.svg" />
                                    <span class="table-header-span">Длительность VIP статуса</span>
                                </div>
                            </th>
                            <th>
                                <div class="table-header">
                                    <img src="https://res.cloudinary.com/dlk1sqmj4/image/upload/v1579034110/system/invitation-friend.svg" />
                                    <span >Друзей зарегестрированно</span>
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <td><span>1 час</span></td>
                            <td><span>3 новых</span></td>
                        </tr>
                        <tr>
                            <td><span>3 часа</span></td>
                            <td><span>5 новых</span></td>
                        </tr>
                        <tr>
                            <td><span>24 часа</span></td>
                            <td><span>7 новых</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
