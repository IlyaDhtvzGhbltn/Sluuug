@model Slug.Model.Users.EducationModel
@using Slug.Extensions

<div class="info-item education">
    <div class="item-info">
        <h3>@Model.Title</h3>
        <span>@Model.Country @Model.City</span>
        <span>@Model.Start - @Model.End</span>
        <span class="user-comment">&laquo;@Model.Comment&raquo;</span>
    </div>
    <div class="item-delete">
        <button id="@Model.EntryId" class="delete-button" onclick="dropEntry(this)">Удалить</button>
    </div>
</div>