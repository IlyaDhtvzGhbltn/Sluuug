@model Slug.Model.Users.MemorableEventsModel
@using Slug.Extensions

<div class="info-item event">
    <div class="item-info">
        <h3>@Model.EventTitle</h3>
        <span>@Model.DateEvent</span>
        <span class="user-comment">&laquo;@Model.EventComment&raquo;</span>
    </div>
    <div class="item-delete">
        <button id="@Model.EntryId" class="delete-button" onclick="dropEntry(this)">Удалить</button>
    </div>
</div> 