@model Slug.Model.Albums.AlbumModel

<div class="album">
    <b>@Model.Title</b> <p><span>Создан <b>@Model.CreationTime</b></span></p>
    <p>
        <img src="@Model.AlbumLabelUrl" height="50" width="50" /><span>@Model.AuthorComment</span>
        <button onclick="show_form_upload_foto('@Model.Guid')">Загрузить фото</button>
        <button onclick="drop_album('@Model.Guid')">Удалить альбом</button>
    </p>
    <div class="uplpad_form" id="upload_foto_div_@Model.Guid"></div>
    @if (Model.FotosCount > 0)
    {
        <p><button class="show_btn" id="@Model.Guid" onclick="expandAlbum(this.id)">Показать</button></p>
    }
    else
    {
        <p><span>Альбом пуст</span></p>
    }
    <div class="fotos_view" id="view_@Model.Guid"></div>
</div>