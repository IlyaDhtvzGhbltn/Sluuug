@model Slug.Model.Albums.ExpandedAlbumModel

<div class="expand-album">
    <div class="close-expand-album-button">
        <img onclick="closeExpandedAlbum()" src="https://res.cloudinary.com/dlk1sqmj4/image/upload/c_scale,h_45/v1563052002/system/close-x.png" />
    </div>
    <div class="expand-album-view">
        <div class="image-view">
            <div class="full-image">
                <div class="image-title">
                    <h3>@Model.ExpandedPhotoTitle</h3>
                </div>
                <div class="image-description">
                    <span>@Model.ExpandedPhotoDescription</span>
                </div>
                <div class="image-manage">
                    <div class="image-title-manage">
                        <span>Изменить название</span>
                        <input type="text" />
                        <button>Готово</button>
                    </div>
                    <div class="image-description-manage">
                        <span>Изменить описание</span>
                        <input type="text" />
                        <button>Готово</button>
                    </div>
                </div>

                <div class="full-image-container">
                    <img id="album-full-img" src="@Model.ExpandedPhotoFullUrl" />
                </div>
            </div>
        </div>
        <div class="image-comments">
            <div class="users-comments">
                @foreach (var comment in Model.ExpandedPhotoComments)
                {
                    <div class="image-user-comment">
                        <div class="comment-header">
                            <h4>@comment.UserName @comment.UserSurName</h4>
                            <span>@comment.DateFormat</span>
                        </div>
                        <div class="comment-body">
                            <img src="@comment.UserPostedAvatarUri" />
                            <span>@comment.Text</span>
                        </div>
                    </div>
                }
            </div>
            <div class="my-comment-form">
                <textarea></textarea>
                <button>Отправить</button>
            </div>
        </div>
    </div>
    <div class="album-images-browse">
        @for (int i=0; i <= Model.MinimizedPhotos.Count; i++)
        {
            string checkedFlag = "";
            if (i == 0)
            {
                checkedFlag = "checked";
            }
            <div class="small-image" onclick="expandImage('@Model.MinimizedPhotos[i].PhotoId')">
                <input type="radio" name="select-img" class="image-select-checkbox" @checkedFlag />
                <img src="@Model.MinimizedPhotos[i].PhotoSmallUrl" />
            </div>
        }


    </div>
</div>
