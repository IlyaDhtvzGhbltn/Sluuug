@model Slug.Model.Albums.AlbumModel
@using Slug.Extensions

<div class="album">
    <b>@Model.Title</b> <p><span>@Html.Translate("Text_Created") <b>@Model.CreationTime</b></span></p>
    <p>
        <img src="@Model.AlbumLabelUrl" height="50" width="50" /><span>@Model.AuthorComment</span>
    </p>
    @if (Model.FotosCount > 0)
    {
        <p><button id="@Model.Guid" onclick="expandAlbum(this.id)">@Html.Translate("Button_Show")</button></p>
    }
    else
    {
        <p><span>@Html.Translate("Text_Album_Empty")</span></p>
    }
    <div class="fotos_view" id="view_@Model.Guid"></div>
    <div class="comments" id="users_comments_@Model.Guid"></div>
</div>
<script src="~/Scripts/FriendAlbum.js"></script>