@model Slug.Model.SimpleChat.ConversationModel
@using Slug.Extensions


<div class="simple-dialog-wrapper dialog-@Model.GuidId" onclick="redirectToDialog('@Model.GuidId')">
    <img alt="interlocutor avatar" src="@Model.InterlocutorAvatar" />
    <div class="dialog-preview-header">
        <h2>@Model.InterlocutorName @Model.InterlocutorSurName</h2>
        <div class="dialog-not-read-msg-@Model.GuidId"></div>
        <span class="delete-dialog" onclick="deleteDialog('.dialog-@Model.GuidId', '@Model.GuidId'); event.stopPropagation();">x</span>
    </div>
    <div class="confersation-body">
        <h4>@Model.LastMessageSenderName @Model.LastMessageSenderSurName</h4>
        <span>@Model.LastMessage</span>
        <span>@Model.LastMessageSendDate</span>
    </div>
</div>