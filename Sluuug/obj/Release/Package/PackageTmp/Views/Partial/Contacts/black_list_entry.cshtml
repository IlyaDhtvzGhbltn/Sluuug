@model Slug.Model.Users.Relations.BlockedUser

<div class="contact-wrapper">
    <div class="entry-container">
        <div class="head">
            <img alt="user avatar" src="@Model.AvatarResizeUri" />
        </div>
        <div class="body">
            <div onclick="redirectToUser(@Model.UserId)">
                <h2>@Model.Name @Model.SurName</h2>
            </div>
            <span>Заблокирован @Model.BlockDate.ToString("D")</span>
            <br />
            <span>Последнее сообщение для пользователя : @Model.HateMessage</span>
        </div>
        <div class="manage">
            <button onclick="UnblockUser('@Model.UserId')">Разблокировать</button>
        </div>
    </div>
</div>