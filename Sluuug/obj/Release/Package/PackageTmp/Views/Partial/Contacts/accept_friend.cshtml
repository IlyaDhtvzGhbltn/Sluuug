@model Slug.Model.Users.FriendModel
@using Slug.Extensions


<div id="friend_@Model.UserId">
    <div class="friend_div" id="@Model.UserId">
        <img src="@Model.AvatarPath" height="50" width="50" />
        <span>@Model.Name  @Model.SurName</span>
    </div>
    <input type="button" value="@Html.Translate("Button_Delete_Contact")" onclick="dropFromContacts(@Model.UserId)" />
</div>
